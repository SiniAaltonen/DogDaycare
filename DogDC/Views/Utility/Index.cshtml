</head>
<!-- ======= Top Bar ======= -->
<section id="breadcrumbs" class="breadcrumbs">
    <div class="container">
        <br />
        <h2>Palvelumme</h2>

    </div>
</section>
<!-- End Top Bar -->
@{
    if (ViewBag.UserIsAdmin == 1)
    {
        <p>
            <a asp-action="Create">Luo uusi</a>
        </p>
    }
}
@using (Html.BeginForm())
{
    <p>
        Etsi palvelua: @Html.TextBox("SearchString")
        <input type="submit" value="Hae" />
    </p>
}
<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Nimi
                </th>
                <th>
                    Kategoria
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">Tiedot </a> 
                        @{
                            if (ViewBag.UserIsAdmin == 1)
                            {
                                <a asp-action="Edit" asp-route-id="@item.Id">| Muokkaa |</a>
                                <a asp-action="Delete" asp-route-id="@item.Id"> Poista </a>
                                }
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

