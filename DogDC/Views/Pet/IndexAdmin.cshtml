</head>
<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <br />
            <h2>Kaikki lemmikit</h2>

        </div>
    </section><!-- End Breadcrumbs -->


<p>
    <a asp-action="Create">Lisää uusi lemmikki</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nimi
            </th>
            <th>
                Omistaja
            </th>
            <th>
                Ryhmä
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                 
               @* <td>
                    <div class="col-lg-4 col-md-6 portfolio-item filter-card">
                        <img src="@(item.BlobUrl !=null ? item.BlobUrl :"https://mdbootstrap.com/img/new/standard/nature/184.jpg")" class="img-fluid" alt="...">
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <div class="col-lg-3 col-md-4 portfolio-item filter-card">
                        <img src="@(item.BlobUrl !=null ? item.BlobUrl :"https://mdbootstrap.com/img/new/standard/nature/184.jpg")" class="img-fluid" alt="lemmikin kuva">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.FirstName)
                    @Html.DisplayFor(modelItem => item.Customer.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Group.Name)
                </td>

                <td>
                    <a asp-action="EditAdmin" asp-route-id="@item.Id">Muokkaa</a> |
                    <a asp-action="DetailsAdmin" asp-route-id="@item.Id">Tiedot</a> |
                    <a asp-action="DeleteAdmin" asp-route-id="@item.Id">Poista</a>
                </td>
               
                
            </tr>
        }
    </tbody>
</table>
