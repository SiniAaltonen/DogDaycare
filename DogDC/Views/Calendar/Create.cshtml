@model DogDC.Models.Booking
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Portfolio Details - Multi Bootstrap Template</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="assets/img/favicon.png" rel="icon">
    <link href="assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="assets/vendor/animate.css/animate.min.css" rel="stylesheet">
    <link href="assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="assets/css/style.css" rel="stylesheet">

</head>
<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">

    <div class="container">
        <br />
        <h2>Varaa aika</h2>
    </div>
</section><!-- End Breadcrumbs -->
@{
    ViewData["Title"] = "Create";
}

<hr />

<h4>Aktiviteetit</h4>

<div class="row">
    <section id="portfolio-details" class="portfolio-details">
        <div class="container">

            <div class="row gy-4">

                <div class="col-lg-8">
                    <div class="portfolio-details-slider swiper">
                        <div class="swiper-wrapper align-items-center">
                            <img src="https://dogdc.blob.core.windows.net/dogdc/juniorit.jpg" width="40" height="500" alt="">
                        </div>
                        <div class="swiper-pagination"></div>
                    </div>
                </div>
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="StartTime" class="control-label">Aloitusaika</label>
                            <input asp-for="StartTime" class="form-control" />
                            <span asp-validation-for="StartTime" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EndTime" class="control-label">Lopetusaika</label>
                            <input asp-for="EndTime" class="form-control" />
                            <span asp-validation-for="EndTime" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UtilityId" class="control-label">Aktiviteetti</label>
                            <select asp-for="UtilityId" class="form-control">
                                <option value="">Aktiviteetti</option>
                                <option value="1">Metsäretki</option>
                                <option value="2">Kotieläinpuistoretki</option>
                                <option value="3">Alin alpakkatila</option>
                                <option value="4">Vesipuistoretki</option>
                                <option value="5">Kynsienleikkuu</option>
                                <option value="6">Turkin trimmaus</option>
                                <option value="7">Hieronta</option>
                                <option value="8">Aromaterapia</option>
                                <option value="9">Agility</option>
                                <option value="10">Maalaushetki</option>
                                <option value="11">Champawn</option>
                                <option value="12">Kielikurssi</option>
                                <option value="13">Pääsiäisrieha</option>
                                <option value="14">Vappukarkelot</option>
                                <option value="15">Juhannustanssit</option>
                                <option value="16">Pikkujoulut</option>
                                <option value="17">Potrettikuvaus</option>
                                <option value="18">Luokkakuvaus</option>
                                <option value="19">Perhekuvaus</option>
                                <option value="20">Maalari</option>
                            </select>
                        </div>
                        <br />

                        @{
                            if (ViewBag.UserIsAdmin == 1)
                            {
                                <div class="form-group">
                                    <input type="submit" value="Varaa" class="btn btn-light" />
                                    <a class="btn btn-light" asp-action="IndexAdmin">Takaisin varauksiin</a>
                                </div>
                            }
                            else
                            {
                                <div class="form-group">
                                    <input type="submit" value="Varaa" class="btn btn-light" />
                                    <a class="btn btn-light" asp-action="Index">Takaisin</a>
                                </div>
                            }
                        }
                    </form>

                </div>
            </div>
        </div>
</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
        }
